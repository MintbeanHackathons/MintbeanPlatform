{
  "name": "mintbean-root",
  "version": "1.1.0",
  "private": true,
  "bin": {
    "bean": "ts-node ./bin/bean.ts"
  },
  "scripts": {
    "cli.build": "tsc --project ./cli.tsconfig.json",
    "prod": "docker-compose --env-file=/opt/mintbean/config/docker-compose.env -f docker-compose.production.yml",
    "prod.start": "docker-compose --env-file=/opt/mintbean/config/docker-compose.env -f docker-compose.production.yml up -d",
    "prod.build": "docker-compose --env-file=/opt/mintbean/config/docker-compose.env -f docker-compose.production.yml build --no-cache",
    "prod.stop": "docker-compose --env-file=/opt/mintbean/config/docker-compose.env -f docker-compose.production.yml stop",
    "dev": "docker-compose --env-file=/opt/mintbean/config/docker-compose.env -f docker-compose.development.yml",
    "dev.start": "docker-compose --env-file=/opt/mintbean/config/docker-compose.env -f docker-compose.development.yml up -d",
    "dev.build": "docker-compose --env-file=/opt/mintbean/config/docker-compose.env -f docker-compose.development.yml build --no-cache",
    "dev.stop": "docker-compose --env-file=/opt/mintbean/config/docker-compose.env -f docker-compose.development.yml stop",
    "dev.psql": "PGPASSWORD=password psql -U mintbean -d mintbean_development -h 0.0.0.0",
    "dev.sql": "docker-compose --env-file=/opt/mintbean/config/docker-compose.env -f docker-compose.development.yml exec backend yarn sql",
    "dev.seed": "docker-compose --env-file=/opt/mintbean/config/docker-compose.env -f docker-compose.development.yml exec backend yarn sql db:seed:all",
    "dev.auth.init": "yarn dev exec keycloak /opt/jboss/keycloak/bin/add-user-keycloak.sh -u keycloak -p password",
    "dev.clean": "./scripts/docker-rm-all.sh",
    "dev.fixdb": "sudo chown -R $USER:$USER db/data/",
    "dev.frontend": "docker-compose --env-file=/opt/mintbean/config/docker-compose.env -f docker-compose.development.yml up -d --scale frontend=0",
    "dev.fullstack": "docker-compose --env-file=/opt/mintbean/config/docker-compose.env -f docker-compose.development.yml up -d --scale frontend=0 --scale backend=0"
  },
  "dependencies": {
    "@types/node": "^12.12.41",
    "commander": "^5.1.0"
  },
  "devDependencies": {
    "ts-node": "^8.10.1",
    "typescript": "^3.9.3"
  }
}